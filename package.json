{
  "name": "add-to-release-notes",
  "description": "GitHub Action to add content to release notes",
  "type": "module",
  "homepage": "https://github.com/gacts/add-to-release-notes#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gacts/add-to-release-notes.git"
  },
  "bugs": {
    "url": "https://github.com/gacts/add-to-release-notes/issues"
  },
  "keywords": [
