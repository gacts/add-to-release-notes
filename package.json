    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^15.14.0",
    "prettier": "^3.6.2",
    "rollup": "^4.53.2"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
